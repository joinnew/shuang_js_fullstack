<view class="main">
    <view class="category-left">
        <!-- 内容是text,其外部使用一个view包裹，添加wx:for 左边导航栏使用的是循环控制-->
        <view wx:for="{{category}}" wx:key="{{item.id}}" data-id="{{item.id}}" data-index="{{index}}" bindtap="switchCategory"
            class="cate-list {{curIndex===index?'on':''}}">
            <text>{{item.name}}</text>
        </view>
    </view>
    <!-- scroll-into-view要与滚动方向结合scroll-y（默认值为true	表示2允许纵向滚动） 指定从哪个方向滚动到该界面  -->
    <scroll-view class="category-right" scroll-y scroll-into-view="{{toView}}" scroll-with-animation="true">
        <block wx:for="{{detail}}" wx:key="{{item.id}}">
            <view class="cate-box" id="{{item.id}}">
                <!-- id是为了点击左边导航栏，右边描点到对应内容 -->
                <view class="cate-banner">
                    <image src="{{item.banner}}"/>
                </view>
                <view class="cate-title">
                    <text>{{item.cate}}</text>
                </view>
                <view class="product">
                    <!-- 存在两重循环，第二重是在item里的一个数组 -->
                    <view wx:for="{{item.detail}}" wx:key="{{index}}" wx:for-item="product" class="product-list">
                        <image src="{{product.thumb}}"/>
                        <view class="product-name">
                            <text>{{product.name}}</text>
                        </view>
                    </view>
                </view>
            </view>
        </block>
        
    </scroll-view>
</view>